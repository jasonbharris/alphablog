<h1 class='text-center mt-4'>Listing all articles</h1>

<div id='page-content'>
    <div class="container">
        <% @articles.each do |article| %>
            <div class="row d-flex justify-content-center">
                <div class="col-8 mt-4">
                    <div class="card text-center shadow mb-5 bg-body rounded">
                        <div class="card-header top text-white font-italic">
                            created by: Jason Harris
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= link_to article.title, article_path(article), class: 'card-link' %></h5>
                            <p class="card-text"><%= truncate(article.description, length: 100) %></p>
                            <%= link_to 'View', article_path(article), class: 'btn btn-outline-primary' %>
                            <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-outline-primary' %>
                            <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-outline-primary' %>
                        </div>
                        <div class="card-footer bottom text-white">
                            <small>Created <%= time_ago_in_words(article.created_at) %> ago, 
                            Edited: <%= time_ago_in_words(article.updated_at) %> ago</small>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>

    <p><button><%= link_to 'Create New Article', new_article_path %></button></p>
</div>